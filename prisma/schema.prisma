generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  // Using Json for flexibility in development. Replace with composite `type Address` or a
  // separate `model Address` relation if you prefer structured data.
  address Json?
}

